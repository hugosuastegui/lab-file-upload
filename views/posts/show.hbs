<div class="card">
  <h1>{{picName}}</h1>
  <img src="{{picPath}}" alt="{{picName}}">
  <br><br>
  <p>{{content}}</p>
  <small>{{creatorId.username}}</small>
</div>
<br>

  {{!-- /////////////// COMMENTS //////////////// --}}
<h4>Comments</h4>
{{#each comments}}
  <div class="comment">
    <img src="{{this.imagePath}}" alt="">
    <b>{{this.imageName}}</b>
    <p>{{this.content}}</p>
    <i><small>{{this.authorId.username}}</small></i>
  </div>
{{/each}}

<div class="comment-actions">
  <form action="/posts/show/{{id}}" method="POST" enctype="multipart/form-data">
    <label for="imageName">Comment title</label>
    <br><br>
    <input type="text" name="imageName">
    <br><br>
    <label for="content">Comment content</label>
    <br><br>
    <input type="text" name="content">
    <br><br>
    <input type="file" name="imagePath">
    <br><br>
    <button type="submit">Create new comment</button>
  </form>
</div>
